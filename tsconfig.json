{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "removeComments": false,
    "target": "es5",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "build"
  },
  "exclude": [
    "build",
    "coverage",
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "test-framework"
  ],
  "files": [
    "index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
